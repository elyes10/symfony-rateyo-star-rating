{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 25px; padding: 20px;">
        <div class="card">
            <div class="card-body">
            <h1 class="card-title">veuillez remplir ce formulaire</h1>
            
                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }} 
